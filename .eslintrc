{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "max-statements": ["warn", 10],
    "max-depth": ["warn", 4],
    "max-params": ["warn", 3],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "warn",
    "react/display-name": "warn",
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreComments": true
      }
    ],
    "linebreak-style": 0,
    "no-console": "warn",
    "no-unused-vars": "warn",
    "indent": ["warn", 2, { "SwitchCase": 1 }]
  }
}
